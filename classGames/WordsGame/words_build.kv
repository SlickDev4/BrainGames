<Confirm_Remove@Button>:
    size_hint: 0, 0
    pos_hint: {'x': 0, 'y': 0}
    opacity: 0
    disabled: True

<Words>:

    CustomImage:
        source: 'images/dark_mode.jpg'

    HomeButtons:
        text: 'Back'
        pos_hint: {'x': 0.05, 'y': 0.05}
        background_color: (0,0,1,1)
        on_press:
            root.manager.current = 'games'
            root.manager.transition.direction = 'right'
            root.back()

    LevelButtons:
        id: easy
        text: 'Easy'
        size_hint: 0.8, 0.1
        pos_hint: {'x': 0.1, 'y': 0.8}
        background_color: (0,1,0,1)
        on_press: root.initiate_level('easy')

    LevelButtons:
        id: medium
        text: 'Medium'
        size_hint: 0.8, 0.1
        background_color: (235/255,153/255,12/255,1)
        pos_hint: {'x': 0.1, 'y': 0.65}
        on_press: root.initiate_level('medium')

    LevelButtons:
        id: hard
        text: 'Hard'
        size_hint: 0.8, 0.1
        background_color: (1,0,0,1)
        pos_hint: {'x': 0.1, 'y': 0.5}
        on_press: root.initiate_level('hard')

    LevelButtons:
        id: expert
        text: 'Expert'
        size_hint: 0.8, 0.1
        background_color: (0,0,0,1)
        pos_hint: {'x': 0.1, 'y': 0.35}
        on_press: root.initiate_level('expert')

    CustomLabel:
        id: word_label
        valign: 'top'
        halign: 'left'
        background_color: (0,0,0,1)
        size_hint: 0, 0
        pos_hint: {'x': 0, 'y': 0}
        opacity: 0

    CustomLabel:
        id: current_word_label
        valign: 'top'
        halign: 'left'
        background_color: (0,0,0,1)
        size_hint: 0, 0
        pos_hint: {'x': 0, 'y': 0}
        opacity: 0

    Confirm_Remove:
        id: confirm_button
        text: 'confirm'
        on_press: root.confirm_word_and_add_to_main_label()

    Confirm_Remove:
        id: remove_button
        text: 'remove'
        on_press: root.remove_characters_from_label()

    Confirm_Remove:
        id: delete_button
        text: 'delete'
        on_press: root.delete_word_from_current_label()
