<Home>:
    CustomImage:
        source: 'images/dark_mode.jpg'

    CustomLabel:
        text: 'Welcome to Brain Games'
        font_size: sp(25)
        size_hint: 0.9, 0.2
        pos_hint: {'x': 0.05, 'y': 0.83}

    CustomImage:
        source: 'images/brain.jpg'
        size_hint: 0.9, 0.3
        pos_hint: {'x': 0.05, 'y': 0.57}
        background_color: (0,0,0,0)

    HomeButtons:
        text: 'Games'
        pos_hint: {'x': 0.05, 'y': 0.43}
        on_press:
            root.manager.current = 'games'
            root.manager.transition.direction = 'left'

    HomeButtons:
        text: 'Scoreboard'
        pos_hint: {'x': 0.05, 'y': 0.31}
        disabled: True
        on_press:
            root.manager.current = 'scoreboard'
            root.manager.transition.direction = 'left'

    HomeButtons:
        text: 'Settings'
        pos_hint: {'x': 0.05, 'y': 0.19}
        disabled: True
        on_press:
            root.manager.current = 'settings'
            root.manager.transition.direction = 'left'

    HomeButtons:
        text: 'Exit'
        pos_hint: {'x': 0.05, 'y': 0.05}
        background_color: (1,0,0,1)
        on_press: app.stop()